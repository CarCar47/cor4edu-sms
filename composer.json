{
    "name": "cor4edu/sms",
    "description": "COR4EDU Student Management System - Modern PHP Implementation following Gibbon patterns",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "COR4EDU Development Team",
            "email": "dev@cor4edu.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "aura/auth": "^4.0",
        "aura/sqlquery": "^2.7",
        "google/cloud-storage": "^1.48",
        "league/container": "^3.3",
        "league/csv": "^9.8",
        "league/flysystem": "^3.0",
        "monolog/monolog": "^3.0",
        "php-di/php-di": "^6.4",
        "phpoffice/phpspreadsheet": "^1.29",
        "ramsey/uuid": "^4.7",
        "slim/psr7": "^1.6",
        "slim/slim": "^4.0",
        "slim/twig-view": "^3.3",
        "twig/twig": "^3.0",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "codeception/codeception": "^5.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Cor4Edu\\": "src/",
            "Cor4Edu\\Reports\\": "modules/Reports/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cor4Edu\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "echo '\\n=== Running Unit Tests ===\\n' && @test:unit",
            "echo '\\n=== Running Code Style Check ===\\n' && @test:lint",
            "echo '\\n=== Running Static Analysis ===\\n' && @test:analyze",
            "echo '\\n=== All Tests Passed âœ… ===\\n'"
        ],
        "test:unit": [
            "vendor/bin/phpunit --testsuite=Unit --colors=always"
        ],
        "test:integration": [
            "vendor/bin/phpunit --testsuite=Integration --colors=always"
        ],
        "test:all": [
            "vendor/bin/phpunit --colors=always"
        ],
        "test:coverage": [
            "vendor/bin/phpunit --coverage-html coverage/ --coverage-text --colors=always"
        ],
        "test:lint": [
            "vendor/bin/phpcs --standard=PSR12 --colors --warning-severity=0 src/ modules/"
        ],
        "test:analyze": [
            "vendor/bin/phpstan analyse src/ modules/ --level=5 --ansi --no-progress --memory-limit=-1"
        ],
        "test:security": [
            "composer audit --no-dev"
        ],
        "fix": [
            "phpcbf --standard=PSR12 src/ modules/"
        ],
        "test:phpunit": [
            "@test:unit"
        ],
        "test:codeception": [
            "codecept run"
        ],
        "test:phpstan": [
            "@test:analyze"
        ],
        "test:codesniffer": [
            "@test:lint"
        ],
        "fix:codesniffer": [
            "@fix"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "codeception/c3": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
