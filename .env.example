# Environment Configuration
APP_ENV=development
APP_DEBUG=true
APP_NAME="COR4EDU SMS"
APP_URL=http://localhost

# Database Configuration
# For local development (TCP connection)
DB_HOST=localhost
DB_PORT=3306
DB_NAME=cor4edu_sms
DB_USERNAME=root
DB_PASSWORD=

# For Google Cloud Run (Unix socket connection)
# Uncomment and configure for Cloud SQL:
# DB_SOCKET=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME
# DB_NAME=school_cor4edu_sms
# DB_USERNAME=cor4edu_admin
# DB_PASSWORD=stored-in-secret-manager

# Security
APP_SECRET=your-32-character-secret-key-here
SESSION_NAME=cor4edu_session
SESSION_LIFETIME=7200

# File Storage
UPLOAD_MAX_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,doc,docx

# Google Cloud Storage (for production)
# Uncomment for Cloud Run deployments:
# STORAGE_DRIVER=gcs
# GCS_BUCKET=school-cor4edu-uploads
# GCS_PROJECT_ID=school-cor4edu

# Email Configuration (for future use)
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@cor4edu.com
MAIL_FROM_NAME="COR4EDU SMS"

# Logging
LOG_LEVEL=debug
LOG_CHANNEL=single